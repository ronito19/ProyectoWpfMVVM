<UserControl x:Class="WpfMVVM_Project.Views.Nuevo_Edit_Productos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:WpfMVVM_Project.Views"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1050">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding UpdateFacturasCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <StackPanel>
        <StackPanel>
            <TextBlock Text="FACTURAS" TextAlignment="Center"  FontSize="30" FontWeight="Bold"/>
            <TextBlock Margin="10" Text="FECHA FACTURA" HorizontalAlignment="Center"/>
            <DatePicker Margin="350,0,350,50" SelectedDate="{Binding fecha1, StringFormat=dd/MM/yyyy}"/>

        </StackPanel>
        <StackPanel>
            <TextBlock Text="CLIENTES" TextAlignment="Center"  FontSize="30" FontWeight="Bold"/>
            <TextBlock Margin="10" Text="ELIGE UN CLIENTE" HorizontalAlignment="Center"/>
            <ComboBox Margin="300,0,300,50"  SelectedItem="{Binding SelectedClientes}" ItemsSource="{Binding ListaClientes}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="DropDownOpened">
                        <i:InvokeCommandAction Command="{Binding UpdateFacturasCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
        </StackPanel>
        
        <StackPanel>
            <TextBlock Text="AÑADIR  PRODUCTO" TextAlignment="Center" FontSize="30" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="PRODUCTO" TextAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="CANTIDAD" TextAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Elige un producto"  TextAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <ComboBox SelectedItem="{Binding LoadProductosCommand}" ItemsSource="{Binding ListaProductos}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="DropDownOpened">
                                <i:InvokeCommandAction Command="{Binding UpdateFacturasCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBox Width="100"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="3">
                    <Button Content="AÑADIR" Width="100" Margin="0,0,0,100" Command="{Binding InsertEmpleadoCommand}"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
        <StackPanel Grid.Column="0" Margin="10" Height="300">
            <ListView ItemsSource="{Binding ListaProductos}" SelectedItem="{Binding Producto}" MaxHeight="300">


                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="REF" DisplayMemberBinding="{Binding Path=DNI}" />
                        <GridViewColumn Header="MARCA" DisplayMemberBinding="{Binding Path=Nombre}" />
                        <GridViewColumn Header="DESCRIPCION" DisplayMemberBinding="{Binding Path=Direccion}" />
                        <GridViewColumn Header="CANTIDAD" DisplayMemberBinding="{Binding Path=Telefono}" />
                        <GridViewColumn Header="PRECIO" DisplayMemberBinding="{Binding Path=Fecha}" />
                        <GridViewColumn Header="TOTAL" DisplayMemberBinding="{Binding Path=Dpto.nombreDpto}" />

                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="PRODUCTO" TextAlignment="Center" Margin="20"/>
                <Button Content="ELIMINAR" Width="100" Command="{Binding DeleteProductoCommand}" />
            </StackPanel>    
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="TOTAL FACTURA:" TextAlignment="Center"  FontSize="30" FontWeight="Bold"/>
            <TextBox Width="100"/>
        </StackPanel>
        <StackPanel>
            <Button Content="CREAR  FACTURA" Width="200" Margin="20"/>
        </StackPanel>

    </StackPanel>
    
    
</UserControl>
